import java.util.Scanner;
public class VegetableMarket
{
    public static void main(String[] args)
    {
        Scanner scanner = new Scanner(System.in);
        double priceVegetable = Double.parseDouble(scanner.nextLine());
        double priceFruits = Double.parseDouble(scanner.nextLine());
        int kiloVeg = Integer.parseInt(scanner.nextLine());
        int kiloFruits = Integer.parseInt(scanner.nextLine());
        double income = ((priceVegetable*kiloVeg) + (priceFruits*kiloFruits))/1.94;

        System.out.printf("%.2f", income);
    }

}
